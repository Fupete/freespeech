---
import DefaultLayout from "./DefaultLayout.astro";
const { selected } = Astro.props;
---

<DefaultLayout title={"Dashboard"}>
  <main class="h-full min-h-screen bg-slate-900 flex flex-col">
    <header
      class="bg-blue-500 border border-x-0 border-t-0 border-blue-600 p-2 px-4 flex items-center"
    >
      <h1 class="font-bold text-2xl">
        FreeSpeech <span class="font-light text-lg">Dashboard</span>
      </h1>
      <div class="flex-1"></div>
      <a
        href="/app"
        class="bg-gray-50 text-blue-600 p-2 px-4 rounded-md flex gap-2 items-center"
        >App <svg style="width:24px;height:24px" viewBox="0 0 24 24">
          <path
            fill="currentColor"
            d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"
          ></path>
        </svg>
      </a>
    </header>
    <div class="w-full max-w-[1200px] mx-auto flex-1 flex">
      <section
        class="p-4 h-max flex flex-col items-baseline gap-2 border border-y-0 border-l-0 border-gray-700"
      >
        <a
          href="/dashboard/projects"
          class={`flex justify-center items-center gap-2 text-xl ${
            selected === "projects" ? "text-gray-50" : "text-gray-400"
          }`}
        >
          <svg style="width:24px;height:24px" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M3,11H11V3H3M3,21H11V13H3M13,21H21V13H13M13,3V11H21V3"></path>
          </svg>
          <p>Projects</p>
        </a>
        <a
          href="/dashboard/account"
          class={`flex justify-center items-center gap-2 text-xl ${
            selected === "account" ? "text-gray-50" : "text-gray-400"
          }`}
        >
          <svg style="width:24px;height:24px" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
            ></path>
          </svg>
          <p>Account</p>
        </a>
        <a
          href="/dashboard/settings"
          class={`flex justify-center items-center gap-2 text-xl ${
            selected === "settings" ? "text-gray-50" : "text-gray-400"
          }`}
        >
          <svg style="width:24px;height:24px" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
            ></path>
          </svg>
          <p>Settings</p>
        </a>
        <a
          href="/dashboard/community"
          class={`flex justify-center items-center gap-2 text-xl ${
            selected === "community" ? "text-gray-50" : "text-gray-400"
          }`}
        >
          <svg style="width:24px;height:24px" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M12,5.5A3.5,3.5 0 0,1 15.5,9A3.5,3.5 0 0,1 12,12.5A3.5,3.5 0 0,1 8.5,9A3.5,3.5 0 0,1 12,5.5M5,8C5.56,8 6.08,8.15 6.53,8.42C6.38,9.85 6.8,11.27 7.66,12.38C7.16,13.34 6.16,14 5,14A3,3 0 0,1 2,11A3,3 0 0,1 5,8M19,8A3,3 0 0,1 22,11A3,3 0 0,1 19,14C17.84,14 16.84,13.34 16.34,12.38C17.2,11.27 17.62,9.85 17.47,8.42C17.92,8.15 18.44,8 19,8M5.5,18.25C5.5,16.18 8.41,14.5 12,14.5C15.59,14.5 18.5,16.18 18.5,18.25V20H5.5V18.25M0,20V18.5C0,17.11 1.89,15.94 4.45,15.6C3.86,16.28 3.5,17.22 3.5,18.25V20H0M24,20H20.5V18.25C20.5,17.22 20.14,16.28 19.55,15.6C22.11,15.94 24,17.11 24,18.5V20Z"
            ></path>
          </svg>
          <p>Community</p>
        </a>
      </section>
      <section class="flex-1 h-full p-4">
        <slot />
      </section>
    </div>
  </main>
</DefaultLayout>
