<main
  class="h-screen w-screen bg-blue-500 grid place-items-center text-slate-50"
>
  <div class="flex flex-col items-center">
    <h1 class="text-5xl font-bold text-center">404</h1>
    <p>We didn't find the page you're looking for</p>
    <a class="underline" href="/"
      >We're taking you back home now, click here to get there faster</a
    >
    <script is:inline>
      (async () => {
        await new Promise((resolve) => setTimeout(resolve, 3000));
        window.location.assign("/");
      })();
    </script>
  </div>
</main>
